<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/cam_layout"
        >
        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >

            <ImageButton
                android:id="@+id/btnFlash"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_thumb_up_grey600_36dp"

                android:layout_margin="24dp"
                android:background="@drawable/oval"
                android:adjustViewBounds="true"

                android:layout_gravity="left|top"
                />

            <ImageButton
                android:id="@+id/fab"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_camera_grey600_48dp"
                android:layout_margin="24dp"
                android:background="@drawable/oval"
                android:adjustViewBounds="true"

                android:layout_gravity="center_horizontal|bottom" />

            <SeekBar
                android:layout_width="197dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/zoomBar"
                android:layout_gravity="center_horizontal|top"
                android:background="#6be9ffea" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="79dp"
                android:text="New Switch"
                android:id="@+id/btnFrontCam"
                android:src="@drawable/ic_camera_front_grey600_48dp"
                android:layout_gravity="right|top" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:id="@+id/settings_button"
                android:layout_gravity="right|bottom"
                android:src="@drawable/ic_settings_black_24dp"/>

            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="55dp"
                android:layout_height="74dp"
                android:scaleType="centerCrop"
                android:text="LogOut"
                android:id="@+id/btnLogout"
                android:src="@drawable/logout"
                android:layout_gravity="left|bottom" />
            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:text="LogOut"
                android:id="@+id/UserPhotos"
                android:src="@drawable/ic_star_rate_black_18dp"
                android:layout_gravity="left|center" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:id="@+id/btnUsers"
                android:layout_marginBottom="70dp"
                android:src="@drawable/ic_account_circle_black_48dp"
                android:layout_gravity="right|center_vertical" />
        </FrameLayout>


</LinearLayout>