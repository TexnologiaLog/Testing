<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/detailsLayout"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="720dp"
        android:layout_height="144dp"
        android:id="@+id/imageViewDetails"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/error_404" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:layout_weight="0.69">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:id="@+id/textView"
        android:textSize="24dp"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="sddd"
        android:id="@+id/txtData"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name:"
        android:id="@+id/textView1"
        android:textSize="24dp"
        android:layout_alignTop="@+id/txtFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sddd"
        android:id="@+id/txtFirstName"
        android:textSize="24dp"
        android:layout_below="@+id/txtData"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID:"
        android:id="@+id/textView2"
        android:textSize="24dp"
        android:layout_above="@+id/txtAge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:id="@+id/txtLasstName"
        android:textSize="24dp"
        android:layout_below="@+id/txtFirstName"
        android:layout_marginTop="77dp"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignRight="@+id/txtData"
        android:layout_alignEnd="@+id/txtData" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:id="@+id/textView3"
        android:textSize="24dp"
        android:layout_alignBaseline="@+id/txtAge"
        android:layout_alignBottom="@+id/txtAge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sddd"
        android:id="@+id/txtAge"
        android:textSize="24dp"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/txtLasstName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Friend"
            android:id="@+id/btnAddFriend"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Friend"
            android:id="@+id/btnRemoveFriend"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</LinearLayout>